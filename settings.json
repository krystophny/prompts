{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "enabledPlugins": {
    "clangd-lsp@claude-plugins-official": true
  },
  "includeCoAuthoredBy": false,
  "mcpServers": {
    "helpy": {
      "url": "http://127.0.0.1:8090/mcp"
    },
    "tabura": {
      "url": "http://127.0.0.1:9420/mcp"
    }
  },
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(make *)",
      "Bash(cmake *)",
      "Bash(fpm *)",
      "Bash(go build *)",
      "Bash(go test *)",
      "Bash(pytest *)",
      "Bash(npm run *)",
      "Bash(fprettify *)"
    ],
    "deny": [
      "Bash(git add .)",
      "Bash(git add -A)",
      "Bash(git add --all)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(rm -rf *)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/credentials*)",
      "Read(**/*secret*)"
    ]
  },
  "skipDangerousModePermissionPrompt": true
}
