{
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(make *)",
      "Bash(cmake *)",
      "Bash(fpm *)",
      "Bash(go build *)",
      "Bash(go test *)",
      "Bash(pytest *)",
      "Bash(npm run *)",
      "Bash(fprettify *)"
    ],
    "deny": [
      "Bash(git add .)",
      "Bash(git add -A)",
      "Bash(git add --all)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(rm -rf *)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/credentials*)",
      "Read(**/*secret*)"
    ]
  },
  "preferences": {
    "includeCoAuthoredBy": false,
    "includePRFooter": false
  },
  "enabledPlugins": {
    "clangd-lsp@claude-plugins-official": true
  }
}
